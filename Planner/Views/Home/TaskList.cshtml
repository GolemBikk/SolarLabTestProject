@model IEnumerable<Planner.BusinessLogic.MyTaskViewModel>

<table class="table table-striped table-bordered">
    <thead id="task-head">
        <tr>
            <th style="width: 5%">Номер</th>
            <th>Наименование</th>
            <th style="width: 40%">Описание</th>
            <th style="width: 15%">Дата</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a href="#my-modal" id-val="@item.Id" data-toggle="modal" class="btn btn-primary edit-task">Ред.</a>
                        <button type="button" value="@item.Id" class="btn btn-primary del-task">Уд.</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    Список пуст
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    AddHandlers();
</script>